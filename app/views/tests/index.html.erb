<% content_for :thead do %>
	<tr>
		<th style="width: 25%">Code</th>
		<th style="width: 25%">Name</th>
		<th style="width: 35%">Instructions</th>
		<th></th>
	</tr>
<% end %>

<% content_for :table do %>
	<tr>
		<%=  render 'new' %>
	</tr>			
	<% @tests.each do |t| %>
		<tr>
			<td><%= t.code %></td>
			<td><%= t.name %></td>
			<td class="centered"><%= link_to "Instructions", :controller => 'tests', :action => 'instructions', :id => t.id %></td>
			<td class="centered"><%= link_to "Edit", edit_test_path(t) %></td>
		</tr>
	<% end %>
<% end %>