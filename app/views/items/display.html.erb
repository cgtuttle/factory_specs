
<div class="display-box">
	<%= form_tag('display', :method => :get) do %>		
		<div class="display-title-box">
			<div class="display-title-label">Specifications for</div>
			<div><%= collection_select :item, :id, @items, :id, :code, {:selected => @item.id}, {:onchange => "this.form.submit();", :class => "display-item-select"} %></div>
		</div>
	<% end %>
	<% @categories.each do |c| %>
		<p class="display-category"><%= c.name %></p>
		<% i = 0 %>
		<% @item_specs.each do |s| %>
			<% if s.date_status == "current" && s.spec.category == c %>
				<div class="display-body-box-<%= i %>">
					<span class="display-body-label"><%= s.spec.name %></span>
					<% if s.numeric_value %>
						<span class="display-body-value"><%= s.numeric_value %></span>
					<% end %>
					<% if s.string_value %>
						<span class="display-body-value"><%= s.string_value %></span>
					<% end %>
				</div>
				<br />
				<% i==0 ? i=1 : i=0 %>
			<% end %>
		<% end %>
	<% end %>
</div>