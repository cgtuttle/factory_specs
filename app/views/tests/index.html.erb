<table>
	<thead>
		<tr>
			<th>Code</th>
			<th>Name</th>
			<th>Instructions</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<%=  render 'new' %>
		</tr>			
		<% @tests.each do |t| %>
			<tr>
				<td><%= t.code %></td>
				<td><%= t.name %></td>
				<td><%= link_to "Instructions", :controller => 'tests', :action => 'instructions', :id => t.id %></td>
				<td><%= link_to "Edit", edit_test_path(t) %></td>
			</tr>
		<% end %>							
	</tbody>
</table>