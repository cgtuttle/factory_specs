
<%= render "header" %>

<div id="display-box">
	
	<table class="table table-bordered table-striped" id="display-table">
		<thead id="display-header">
			<tr>
				<th class="category-name">Category</th>
				<th>Specification</th>
				<th class="spec-header">Lower Limit</th>
				<th style="text-align:center;">Target</th>
				<th class="spec-header" style="text-align:right;">Upper Limit</th>
				<th style="text-align:center;">Notes</th>
			</tr>
		</thead>
		<% if @categories %>
			<% @categories.each do |category, item_specs| %>

				<% r = 0 %>
				<% for s in item_specs %>	
					<% r = r + 1 %>
				<% end %>
				
				<tbody>
					<% first_row = true %>										
					<% for s in item_specs %>	
						<% if s.date_status == "current" %>
							<tr>
								<% if first_row %>
									<% first_row = false %>
									<td rowspan="<%= r %>" class="category-name">
										<%= category.name if category %>
									</td>
								<% end %>

								<td class="spec-name"><%= s.spec.name %></td>

								<td class="spec-limit">
									<% if s.lsl %>
										<%= s.lsl %>								
									<% end %>
								</td>

								<td class="spec-value" style="text-align:center;">
									
									<% if s.numeric_value %>								
										<%= "#{s.numeric_value} #{s.unit_of_measure}" %>
									<% end %>

									<% if !s.string_value.empty? %>

										<%= s.string_value %>
									<% end %>

									<% if !s.text_value.empty? %>
										<%= s.text_value %>								
									<% end %>


								</td>

								<td class="spec-limit" style="text-align:right;">
									<% if s.usl %>								
										<%= s.usl %>								
									<% end %>
								</td>

								<td class="right-margin"></td>

								
							</tr>										
						<% end %>	
					<% end %>
				</tbody>
			<% end %>
		<% end %>
	</table> <!--! end of table -->
	
</div>
