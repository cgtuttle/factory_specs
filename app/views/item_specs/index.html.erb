
<% content_for :controls do %>	

		<%= form_tag('item_specs', :method => :get, :style => "line-height:65px;") do %>
			 
			<%= collection_select :item_spec, :item_id, @items, :id, :code, {:selected => @item_id}, {:onchange => "this.form.submit();", :class => "search-field"} %>

			<%= label_tag 'include_future' do %>
				<%= check_box_tag "include_future", "future", @future %>
				Include future
			<% end %>

			<%= label_tag 'include_history' do %>				
				<%= check_box_tag "include_history", "history", @history %>
				Include history
			<% end %>
				
			<%= submit_tag "Apply" %>
		<% end %>
	
<% end %>

<% content_for :thead do %>			
	<th>Category</th>
	<th>Spec</th>
	<th>Text</th>
	<th>Multi-Line Text</th>
	<th>Value</th>
	<th>USL</th>
	<th>LSL</th>
	<th>UOM</th>
	<th>Document</th>
	<th>URL</th>
	<th>Doc Ver</th>
	<th>Test</th>
	<th>Eff Dt</th>
	<th>Ver</th>
	<th>Status</th>
	<th>Edited By</th>
	<th></th>
<% end %>
		
<% content_for :table do %>
	<%= render :partial => 'item_spec', :collection => @item_specs %>
<% end %>

