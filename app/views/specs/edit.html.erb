<h4>Edit Spec Definition</h4>
		
	<%= form_for(@spec) do |f| %>
			<div class="form">
				<div class="field">
					<%=f.label "Code", :class => "field_label"%>
					<%= f.text_field :code %>
					<%=f.label "Definition Name", :class => "field_label"%>
					<%= f.text_field :name %>
					<%=f.label "Category", :class => "field_label"%>
					<%= f.text_field :category %>
					<%=f.label "USL", :class => "field_label"%>
					<%= f.check_box :usl %>
					<%=f.label "LSL", :class => "field_label"%>
					<%= f.check_box :lsl %>
					<%=f.label "Report Label", :class => "field_label"%>
					<%= f.text_field :label %>
					<%=f.label "Report Order", :class => "field_label"%>
					<%= f.number_field :display_order %>
				</div>
			</div>
			<br />
			<div class="actions">
				<%= f.submit "Submit Changes" %>
				<%= f.submit "Cancel" %>
			</div>
		<% end %>		
