
<% content_for :edit_form do %>
	<%= form_for(@spec) do |f| %>

		<%=f.label :code %>
		<%= f.text_field :code %>				
		<%=f.label :name, "Definition Name" %>
		<%= f.text_field :name %>
		

		<%=f.label :category_id %>
		<%= f.collection_select :category_id, Category.active, :id, :code, {:include_blank => "Please select"} %>
		<%=f.label :label %>
		<%= f.text_field :label %>
		<%=f.label :display_order %>
		<%= f.number_field :display_order %>
		
		<div>
			<%= f.submit "Submit Changes" %>
			<%= f.submit "Cancel" %>
		</div>
			
	<% end %>
<% end %>		
