
<table class="data">
	<thead>
		<th>Item Code</th>
		<th>Name</th>
		<th></th>
	</thead>
	<tbody>
		<%= render 'new' %>
		<% @items.each do |i| %>
		<tr>
			<td><%= i.code %></td>
			<td><%= i.name %></td>
			<td><%= link_to "Edit", edit_item_path(i), :class => 'link' %>
					<%= link_to "Delete", item_path(i), :method => :delete, :confirm => "Are you sure?", :class => 'link' %></td>
		</tr>
		<% end %>
	</tbody>
</table>