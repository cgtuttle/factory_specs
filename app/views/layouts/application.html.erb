<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	  <title><%= @title %></title>
	  <%= stylesheet_link_tag    "application" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>

	<body>
		<div class="content">

			<% if user_signed_in? %>
				
				<% if !@no_header %>					
			    <%= render 'main/header' %>
		    <% end %>

				<div id="main" role="main">
					<div class="container-fluid">
	        	<div class="row-fluid">
							<%= yield :left %>	        	
	          	<%= yield %>
	          </div>
	        </div> <!--! end of .container --> 	       
	    	</div> <!--! end of #main -->

			<% else %>			
				<%= yield %>			
			<% end %>
		
		</div> <!--! end of content -->
	</body>

</html>
